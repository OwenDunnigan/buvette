---
import Layout from '../layouts/Layout.astro';

const { vibe } = Astro.locals;
---

<Layout title="Home">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="hero-text text-5xl md:text-7xl font-display font-bold mb-6 text-stone-900">Buvette</h1>
    <p class="text-xl md:text-2xl font-light mb-8 max-w-2xl text-stone-600">
      Inspired by European traditions. Dedicated to the joy of eating and drinking.
    </p>
    <a href="/menu" class="bg-stone-900 text-stone-50 px-8 py-3 text-sm uppercase tracking-widest hover:bg-stone-700 transition-colors">
      View Menu
    </a>
  </div>

  <div class="weather-display bg-stone-200 p-8 my-8 font-mono text-sm border border-stone-300">
      <h3 class="font-display text-xl mb-4">Vibe Engine Debug</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <p><strong>Temp:</strong> <span class="temp-number">{vibe.weather.temp}°C</span> (Apparent: {vibe.weather.apparentTemp}°C)</p>
            <p><strong>Theme:</strong> {vibe.theme.id}</p>
            <p><strong>Wind Force:</strong> {vibe.weather.windForce.toFixed(2)}</p>
            <p><strong>Viscosity:</strong> {vibe.weather.viscosity.toFixed(2)}s</p>
        </div>
        <div>
            <p><strong>Jets Status:</strong> {vibe.social.jetsStatus}</p>
            <p><strong>Manual Override:</strong> {vibe.social.manualOverride}</p>
            <p><strong>Season Bias:</strong> {vibe.temporal.seasonBias}</p>
            <p><strong>Blackout Date:</strong> {vibe.temporal.isBlackoutDate ? 'YES' : 'NO'}</p>
        </div>
      </div>
      <details class="mt-4">
        <summary class="cursor-pointer font-bold">Raw Context</summary>
        <pre class="mt-2 text-xs overflow-x-auto p-2 bg-stone-100">{JSON.stringify(vibe, null, 2)}</pre>
      </details>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-16">
      <div class="bg-white p-8 shadow-sm border border-stone-100">
          <h2 class="font-display text-2xl mb-4">Hours</h2>
          <p class="mb-1"><strong>Monday - Friday:</strong> 8am - 12am</p>
          <p class="mb-1"><strong>Saturday - Sunday:</strong> 9am - 12am</p>
          <p class="mt-4 italic text-sm text-stone-500">Walk-ins welcome.</p>
      </div>
      <div class="bg-white p-8 shadow-sm border border-stone-100">
          <h2 class="font-display text-2xl mb-4">Location</h2>
          <p class="mb-1">The Forks Market</p>
          <p class="mb-1">Winnipeg, MB</p>
          <p class="mt-4"><a href="#" class="underline text-stone-600">Get Directions</a></p>
      </div>
  </div>
</Layout>
