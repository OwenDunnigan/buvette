---
import Layout from '../layouts/Layout.astro';

const today = new Date().toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' });
const time = new Date().toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
const dayOfWeek = new Date().getDay();
const isWeekend = dayOfWeek === 0 || dayOfWeek === 6; // 0 is Sunday, 6 is Saturday
const openHours = isWeekend ? "09:00 - 00:00" : "08:00 - 00:00";
---

<Layout title="Home">
  <div class="flex flex-col items-center text-center space-y-4 font-mono text-sm">

    <div class="w-full flex flex-col justify-center uppercase text-xs border-b border-dashed border-stone-400 pb-4 mb-2">
        <div class="flex justify-between w-full mb-1">
            <span>Date: {today}</span>
            <span>Time: {time}</span>
        </div>
        <div class="text-center font-bold">
            Open Today: {openHours}
        </div>
    </div>

    <div class="py-4">
        <h1 class="text-2xl font-bold uppercase mb-2">Welcome</h1>
        <p class="uppercase text-xs max-w-[200px] mx-auto leading-relaxed">
            Inspired by European traditions.<br/>
            Dedicated to the joy of eating and drinking.
        </p>
    </div>

    <div class="w-full space-y-4 mb-6">
        <div class="w-full border-2 border-black p-3 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] bg-stone-200 hover:bg-stone-300 transition-colors cursor-pointer">
            <a href="#" class="block w-full h-full uppercase font-bold text-sm tracking-widest">
                [ Get Directions ]
            </a>
        </div>

        <div class="w-full border-2 border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] bg-white transform rotate-1 hover:rotate-0 transition-transform duration-300">
            <a href="/menu" class="block w-full h-full uppercase font-bold text-lg tracking-widest hover:underline decoration-wavy">
                &gt;&gt;&gt; View Menu &lt;&lt;&lt;
            </a>
        </div>
    </div>

    <div class="pt-8 pb-4 text-center">
        <p class="uppercase text-xs font-bold border-2 border-black inline-block px-2 py-1 rotate-[-2deg]">
            Order #{(Math.random() * 1000).toFixed(0).padStart(4, '0')}
        </p>
    </div>

  </div>
</Layout>
