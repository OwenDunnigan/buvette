---
interface Props {
  name: string;
  description: string;
  price: string;
}

const { name, description, price } = Astro.props;
---

<div class="mb-6 break-inside-avoid">
  <div class="flex justify-between items-baseline mb-1 border-b border-stone-200 pb-1 border-dotted">
    <h3 class="text-lg font-serif font-semibold text-stone-900">{name}</h3>
    <span class="text-base font-medium ml-4 text-stone-700">{price}</span>
  </div>
  <p class="text-stone-600 text-sm italic">{description}</p>
</div>
