---
import MenuItem from './MenuItem.astro';
import type { MenuItem as MenuItemType } from '../utils/sheets';

interface Props {
  title: string;
  items: MenuItemType[];
}

const { title, items } = Astro.props;
---

<section class="mb-12">
  <div class="text-center mb-8">
    <h2 class="text-2xl font-display font-bold uppercase tracking-widest inline-block border-b-2 border-stone-300 pb-2">{title}</h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-16 gap-y-4">
    {items.map((item) => (
      <MenuItem 
        name={item.Name} 
        description={item.Description} 
        price={item.Price} 
      />
    ))}
  </div>
</section>
