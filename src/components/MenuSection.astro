---
import MenuItem from './MenuItem.astro';
import type { MenuItem as MenuItemType } from '../utils/sheets';

interface Props {
  title: string;
  items: MenuItemType[];
}

const { title, items } = Astro.props;
---

<section class="mb-10">
  <div class="text-center mb-6 relative">
    <div class="absolute inset-0 flex items-center" aria-hidden="true">
        <div class="w-full border-t border-dashed border-stone-300"></div>
    </div>
    <div class="relative flex justify-center">
        <h2 class="bg-stone-100 px-4 text-lg font-bold uppercase tracking-widest border-2 border-black shadow-[2px_2px_0px_0px_rgba(0,0,0,1)]">{title}</h2>
    </div>
  </div>
  <div class="flex flex-col">
    {items.map((item) => (
      <MenuItem 
        name={item.Name} 
        description={item.Description} 
        price={item.Price} 
      />
    ))}
  </div>
</section>
