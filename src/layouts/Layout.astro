---
import VibeInjector from '../components/VibeInjector.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const { theme = 'NORMAL', windSpeed = 10 } = Astro.locals;
---

<!doctype html>
<html lang="en">
	<head>
		<VibeInjector currentTheme={theme} windSpeed={windSpeed} />
		<meta charset="UTF-8" />
		<meta name="description" content="Buvette Restaurant" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Buvette</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
	</head>
	<body class="font-mono min-h-screen py-8 md:py-12 px-4 flex justify-center items-start selection:bg-black selection:text-white">
        <div class="receipt-container bg-stone-100 text-stone-900 w-full max-w-md mx-auto shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] border-2 border-stone-900 relative">
            <header class="p-6 text-center border-b-2 border-dashed border-stone-900">
                <a href="/" class="text-3xl font-bold uppercase tracking-wider block mb-2 hover:line-through decoration-2">Buvette</a>
                <p class="text-xs uppercase mb-4">42 Grove St, New York, NY 10014</p>
                <nav>
                    <ul class="flex justify-center space-x-6 text-sm font-bold uppercase">
                        <li><a href="/" class="hover:bg-black hover:text-white px-1 transition-colors">Home</a></li>
                        <li><a href="/menu" class="hover:bg-black hover:text-white px-1 transition-colors">Menu</a></li>
                        <li><a href="/about" class="hover:bg-black hover:text-white px-1 transition-colors">About</a></li>
                    </ul>
                </nav>
            </header>

            <main class="p-6 min-h-[400px]">
                <slot />
            </main>

            <footer class="p-6 border-t-2 border-dashed border-stone-900 relative">
                <!-- Location & Hours Section (Moved from Home) -->
                <div class="grid grid-cols-2 gap-4 mb-8 text-[10px] uppercase">
                    <div>
                        <h3 class="font-bold mb-1 border-b border-stone-300 inline-block">Location</h3>
                        <p>42 Grove St</p>
                        <p>New York, NY 10014</p>
                        <p class="mt-2 text-[10px] underline cursor-pointer">Get Directions</p>
                    </div>
                    <div>
                        <h3 class="font-bold mb-1 border-b border-stone-300 inline-block">Hours</h3>
                        <div class="flex justify-between">
                            <span>M-F</span>
                            <span>08:00-00:00</span>
                        </div>
                        <div class="flex justify-between">
                            <span>S-S</span>
                            <span>09:00-00:00</span>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <p class="font-bold uppercase text-lg mb-2">Thank You!</p>
                    <p class="text-xs uppercase mb-2">Please Come Again</p>
                    <p class="text-[10px] uppercase">&copy; {new Date().getFullYear()} Buvette EST.</p>
                </div>

                <div class="mt-6 flex justify-center overflow-hidden">
                    <!-- Barcode simulation -->
                    <div class="h-12 flex items-end gap-[2px]">
                         {Array.from({ length: 50 }).map(() => (
                            <div
                                class="bg-black"
                                style={{
                                    width: Math.random() > 0.5 ? '2px' : '4px',
                                    height: `${Math.floor(Math.random() * 60) + 40}%`
                                }}
                            ></div>
                         ))}
                    </div>
                </div>
            </footer>

            <!-- Jagged bottom edge using CSS gradient -->
            <div class="absolute left-0 right-0 h-4"
                 style={{
                    bottom: '-16px',
                    background: 'linear-gradient(45deg, transparent 33.333%, #f5f5f4 33.333%, #f5f5f4 66.667%, transparent 66.667%), linear-gradient(-45deg, transparent 33.333%, #f5f5f4 33.333%, #f5f5f4 66.667%, transparent 66.667%)',
                    backgroundSize: '20px 40px',
                    backgroundPosition: '0 -20px'
                 }}
            >
            </div>
        </div>
	</body>
</html>

<style is:global>
    :root {
        --font-mono: 'Space Mono', monospace;
    }
    .font-mono {
        font-family: var(--font-mono);
    }

    body {
        background-image: radial-gradient(#a8a29e 1px, transparent 1px);
        background-size: 20px 20px;
    }

    /* Custom scrollbar for raw feel */
    ::-webkit-scrollbar {
        width: 12px;
    }
    ::-webkit-scrollbar-track {
        background: #d6d3d1;
    }
    ::-webkit-scrollbar-thumb {
        background: #1c1917;
        border: 2px solid #d6d3d1;
    }
</style>
