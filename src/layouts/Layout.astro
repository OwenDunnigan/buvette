---
import VibeInjector from '../components/VibeInjector.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
	title: string;
    useDefaultContainer?: boolean;
}

const { title, useDefaultContainer = true } = Astro.props;
const { vibe } = Astro.locals;
const { viscosity, windForce, temp } = vibe.weather;
const theme = vibe.theme;

// Calculate windSpeed from windForce (0-1) -> (0-50) for the VibeInjector
const injectorWindSpeed = windForce * 50;

// Calculate tempMood: 0 (Cold -30) to 1 (Hot +30)
const tempMood = Math.min(Math.max((temp + 30) / 60, 0), 1);
---

<!doctype html>
<html lang="en" style={`--viscosity: ${viscosity}s; --wind-force: ${windForce}; --temp-mood: ${tempMood}; --primary-color: ${theme.palette.primary}; --contrast-level: ${theme.visuals.contrast}; --blur-amount: ${theme.visuals.blur};`}>
	<head>
		<VibeInjector currentTheme={theme} windSpeed={injectorWindSpeed} />
		<Analytics />
		<meta charset="UTF-8" />
		<meta name="description" content="Buvette Restaurant" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <meta name="theme-color" content={theme.palette.primary} />
		<title>{title} | Buvette</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Recursive:slnt,wght,CASL,MONO@-15..0,300..1000,0..1,0..1&display=swap" rel="stylesheet">
	</head>
	<body class={`font-mono text-stone-800 bg-stone-50 flex flex-col min-h-screen ${theme.mode}`}>
		<header class="py-6 border-b border-stone-200">
            <div class="container mx-auto px-4 flex justify-between items-center">
                <a href="/" class="text-3xl font-display font-bold tracking-tight">Buvette</a>
                <nav>
                    <ul class="flex justify-center space-x-6 text-sm font-bold uppercase">
                        <li><a href="/" class="hover:bg-black hover:text-white px-1 transition-colors">Home</a></li>
                        <li><a href="/menu" class="hover:bg-black hover:text-white px-1 transition-colors">Menu</a></li>
                        <li><a href="/about" class="hover:bg-black hover:text-white px-1 transition-colors">About</a></li>
                    </ul>
                </nav>
            </div>
		</header>

        <main class={`flex-grow ${useDefaultContainer ? 'container mx-auto px-4 py-8' : ''}`}>
            <slot />
        </main>

        <footer class="p-6 border-t-2 border-dashed border-stone-900 relative">
            <!-- Location & Hours Section -->
            <div class="grid grid-cols-2 gap-4 mb-8 text-[10px] uppercase">
                <div>
                    <h3 class="font-bold mb-1 border-b border-stone-300 inline-block">Location</h3>
                    <p>42 Grove St</p>
                    <p>New York, NY 10014</p>
                    <p class="mt-2 text-[10px] underline cursor-pointer">Get Directions</p>
                </div>
                <div>
                    <h3 class="font-bold mb-1 border-b border-stone-300 inline-block">Hours</h3>
                    <div class="flex justify-between">
                        <span>M-F</span>
                        <span>08:00-00:00</span>
                    </div>
                    <div class="flex justify-between">
                        <span>S-S</span>
                        <span>09:00-00:00</span>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <p class="font-bold uppercase text-lg mb-2">Thank You!</p>
                <p class="text-xs uppercase mb-2">Please Come Again</p>
                <p class="text-[10px] uppercase">&copy; {new Date().getFullYear()} Buvette EST.</p>
            </div>

            <div class="mt-6 flex justify-center overflow-hidden">
                <!-- Barcode simulation -->
                <div class="h-12 flex items-end gap-[2px]">
                        {Array.from({ length: 50 }).map(() => (
                        <div
                            class="bg-black"
                            style={{
                                width: Math.random() > 0.5 ? '2px' : '4px',
                                height: `${Math.floor(Math.random() * 60) + 40}%`
                            }}
                        ></div>
                        ))}
                </div>
            </div>

            <!-- Jagged bottom edge using CSS gradient -->
            <div class="absolute left-0 right-0 h-4"
                    style={{
                    bottom: '-16px',
                    background: 'linear-gradient(45deg, transparent 33.333%, #f5f5f4 33.333%, #f5f5f4 66.667%, transparent 66.667%), linear-gradient(-45deg, transparent 33.333%, #f5f5f4 33.333%, #f5f5f4 66.667%, transparent 66.667%)',
                    backgroundSize: '20px 40px',
                    backgroundPosition: '0 -20px'
                    }}
            >
            </div>
        </footer>
		<SpeedInsights />
	</body>
</html>

<style is:global>
    :root {
        --font-display: 'Recursive', sans-serif;
        --font-mono: 'IBM Plex Mono', monospace;

        /* Calculated Font Axes */
        --font-slant: calc(var(--wind-force) * -12); /* Lean back 12deg max */
        --font-casual: var(--temp-mood);             /* Stiff or Loose */
        --font-weight-hero: calc(800 + (var(--wind-force) * 100)); /* Bulk up against wind */
    }

    body {
        transition: background-color calc(0.5s * var(--viscosity));
    }

    .font-display {
        font-family: var(--font-display);
        font-variation-settings:
            'MONO' 0,                   /* Proportional (Readable) */
            'CASL' var(--font-casual),  /* Reacts to Temp */
            'slnt' var(--font-slant),   /* Reacts to Wind */
            'wght' var(--font-weight-hero);
    }

    .font-mono {
        font-family: var(--font-mono);
    }

    /* 1. HEADLINES (The "Voice") */
    h1, h2, .hero-text, .text-3xl {
        font-family: var(--font-display);
        font-variation-settings:
            'MONO' 0,                   /* Proportional (Readable) */
            'CASL' var(--font-casual),  /* Reacts to Temp */
            'slnt' var(--font-slant),   /* Reacts to Wind */
            'wght' var(--font-weight-hero);
    }

    /* 2. THE BIG DATA (The "gauge") */
    .weather-display .temp-number {
        font-family: 'Recursive', monospace; /* Switch to Mono for alignment */
        font-variation-settings:
            'MONO' 1,                   /* Force Monospace for numbers */
            'CASL' 0,                   /* Keep numbers looking technical/stiff */
            'slnt' var(--font-slant),   /* But let them LEAN in the wind */
            'wght' 700;
    }

    /* 3. BODY COPY (The "Anchor") */
    body, p, .menu-item {
        font-family: 'IBM Plex Mono', monospace; /* Static, legible, industrial */
        font-weight: 400;
    }

    /* The "Sun Lie" / Glare Logic */
    .glare-overlay {
        opacity: var(--contrast-level);
        filter: blur(var(--blur-amount));
    }
</style>
